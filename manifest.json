{
    "manifest_version": 2,

    "name": "EzURL2QR",
    "description": "Extension for generate QR code from URL",
    "version": "0.1",
    "browser_action": {
        "default_icon": "img/EzURL2QR_128.png",
        "default_popup": "popup.html"
    },
    "background": {
        "scripts": ["js/background.js"],
        "persistent": false
    },
    "icons": {
        "128": "img/EzURL2QR_128.png"
    },
    "permissions": [
        "tabs", "<all_urls>"
    ],
    "web_accessible_resources" : [
        "https://api.qrserver.com/v1/create-qr-code/*",
        "http://goqr.me/de/*"
    ]
}